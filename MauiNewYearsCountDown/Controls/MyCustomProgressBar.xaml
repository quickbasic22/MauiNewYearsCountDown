<?xml version="1.0" encoding="utf-8" ?>
<Frame xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MauiNewYearsCountDown.Controls"
             x:DataType="local:MyCustomProgressBar"
             x:Name="form"
             x:Class="MauiNewYearsCountDown.Controls.MyCustomProgressBar">
    <StackLayout>
        <Label 
            Text="{Binding NewYearsText}"
             TextColor="DarkBlue"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <AbsoluteLayout>
            <BoxView AbsoluteLayout.LayoutBounds="0, 100" AbsoluteLayout.LayoutFlags="SizeProportional" HeightRequest="20" BackgroundColor="Blue" Color="Red" />
            <BoxView AbsoluteLayout.LayoutBounds="50, 100" AbsoluteLayout.LayoutFlags="SizeProportional" HeightRequest="20" BackgroundColor="Red" Color="Blue" />
        </AbsoluteLayout>
    </StackLayout>
</Frame>
